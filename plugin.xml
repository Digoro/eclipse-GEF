<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="gef.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="gef.Perspective"
            id="GEFTutorial.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="gef.View"
            id="GEFTutorial.view">
      </view>
      <view
            class="gef.View"
            id="GEFTutorial.view2"
            name="View2">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="GEFTutorial.view2">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="gef.ChangeLayoutStyleHandler"
            id="GEFTutorial.command.changeLayoutStyle"
            name="Change Layout Style">
      </command>
      <command
            defaultHandler="gef.ChangeConnectionStyleHandler"
            id="GEFTutorial.command.changeConnectionStyle"
            name="Change Connection Style">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:GEFTutorial.view2">
         <command
               commandId="GEFTutorial.command.changeLayoutStyle"
               icon="icons/Layout.ico"
               label="Change Layout Style"
               style="push">
         </command>
         <command
               commandId="GEFTutorial.command.changeConnectionStyle"
               icon="icons/Connection.ico"
               label="Change Connection Style"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
